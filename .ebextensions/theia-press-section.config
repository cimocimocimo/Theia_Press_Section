packages:
  yum:
    git: []
  rubygems:
    sass: []
    
container_commands:
  00_set_path_to_ruby:
    command: "source /opt/elasticbeanstalk/lib/ruby/profile.sh"

  01_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true

  02_create_admin:
    command: "python scripts/create_admin.py"
    leader_only: true

  03_collectstatic:
    command: "python manage.py collectstatic --noinput"

  04_compress:
    command: "python manage.py compress &> /tmp/compress-output"

option_settings:
  - namespace: aws:elasticbeanstalk:container:python
    option_name: WSGIPath
    value: press_section/wsgi.py
  - namespace: aws:elasticbeanstalk:container:python:staticfiles
    option_name: /static/
    value: static/
  - option_name: DJANGO_SETTINGS_MODULE
    value: press_section.settings